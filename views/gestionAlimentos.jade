extends layout
block content
  .container.intro-med
    div(class='row')
      if message.length > 0
        div(class='alert alert-danger' role='alert')= message
      -for(var i=0; i<alimentos.length; ++i){
        .col-sm-6.item-med
          h4=alimentos[i].nombre
          img(src="img/#{alimentos[i].imagen}", width="200")
          p="DescripciÃ³n: " + alimentos[i].descripcion
          strong="$"+alimentos[i].precio
          br
          i="Cantidad: " + alimentos[i].cantidad
          div.container-btn
            a.button.btn-edit(href="#")
              i.fa.fa-pencil-square-o(aria-hidden="true")
            a.button.btn-delete(href="/gestionar-alimento/eliminar/#{alimentos[i].id}")
              i.fa.fa-trash(aria-hidden="true")
      -}
