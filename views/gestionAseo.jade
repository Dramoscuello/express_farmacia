extends layout
block content
  .container.intro-med
    div(class='row')
      if message.length > 0
        div(class='alert alert-danger' role='alert')= message
      -for(var i=0; i<aseo.length; ++i){
        .col-sm-6.item-med
          h4=aseo[i].nombre
          img(src="img/#{aseo[i].imagen}", width="200")
          p="DescripciÃ³n: " + aseo[i].descripcion
          strong="$"+aseo[i].precio
          br
          i="Cantidad: " + aseo[i].cantidad
          div.container-btn
            a.button.btn-edit(href="#")
              i.fa.fa-pencil-square-o(aria-hidden="true")
            a.button.btn-delete(href="/gestionar-aseo/eliminar/#{aseo[i].id}")
              i.fa.fa-trash(aria-hidden="true")
      -}
