extends layout
block content
  .intro-med
    .container
      .row.titular
        .col-sm-12
          h1 MAQUILLAJE Y ACCESORIOS.
      .row
      -for(var i=0; i<accesorios.length; ++i){
        .col-sm-6.item-med
          h4=accesorios[i].nombre
          img(src="img/#{accesorios[i].imagen}", width="200")
          p="DescripciÃ³n: " + accesorios[i].descripcion
          strong="$"+accesorios[i].precio
          br
          if(isAuthenticated)
            button.cart.producto(precio=accesorios[i].precio titulo=accesorios[i].nombre)="Comprar"
          if(!isAuthenticated)
            form(action="http://localhost:8080/signin")
              button.cart="Comprar"
      -}
